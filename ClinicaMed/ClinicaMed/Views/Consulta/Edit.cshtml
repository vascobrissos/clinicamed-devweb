@model ClinicaMed.Models.Consulta

@{
    ViewData["Title"] = "Editar Consulta";
}

<div class="container mt-5">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <h4 class="text-center">Consulta</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdCon" />

                <div class="form-group">
                    <label asp-for="DataConsulta" class="control-label">Data</label>
                    <input asp-for="DataConsulta" class="form-control" type="datetime-local" readonly="@(User.IsInRole("Administrador") || User.IsInRole("Administrativo") ? false : true)" />
                    <span asp-validation-for="DataConsulta" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Observacoes" class="control-label">Observações</label>
                    <textarea asp-for="Observacoes" class="form-control" placeholder="Observações adicionais" rows="3"></textarea>
                    <span asp-validation-for="Observacoes" class="text-danger"></span>
                </div>

                <div class="form-group" hidden>
                    <label asp-for="Estado" class="control-label"></label>
                    <input asp-for="Estado" class="form-control" placeholder="Estado da Consulta" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <div class="form-group" hidden>
                    <label asp-for="ProcessoFK" class="control-label"></label>
                    <select asp-for="ProcessoFK" class="form-control" asp-items="ViewBag.ProcessoFK"></select>
                    <span asp-validation-for="ProcessoFK" class="text-danger"></span>
                </div>

                <div class="form-group" hidden>
                    <label asp-for="ColaboradorFK" class="control-label"></label>
                    <select asp-for="ColaboradorFK" class="form-control" asp-items="ViewBag.ColaboradorFK"></select>
                    <span asp-validation-for="ColaboradorFK" class="text-danger"></span>
                </div>

                <div class="form-group text-center mt-4">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-controller="Consulta" asp-action="Details" asp-route-id="@Model.IdCon" class="btn btn-secondary">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
