@model ClinicaMed.Models.Consulta

@{
    ViewData["Title"] = "Criar Consulta";
    int? processoId = ViewData["ProcessoId"] as int?;
}

<div class="container mt-5">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <h4 class="text-center">Nova Consulta</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="DataConsulta" class="control-label">Data</label>
                    <input asp-for="DataConsulta" class="form-control" type="datetime-local" />
                    <span asp-validation-for="DataConsulta" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Observacoes" class="control-label">Observações</label>
                    <textarea asp-for="Observacoes" class="form-control" placeholder="Observações adicionais" rows="3"></textarea>
                    <span asp-validation-for="Observacoes" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Selecione um Médico</label>
                    <select name="colaboradorId" class="form-control" required>
                        @Html.Raw(ViewData["MedicosOptions"])
                    </select>
                </div>

                <input type="hidden" name="processoId" value="@processoId" />

                <br />

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Criar</button>
                    <a asp-action="Details" asp-controller="Processo" asp-route-id="@processoId" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
