@model IEnumerable<ClinicaMed.Models.Examinando>

@{
    ViewData["Title"] = "Index";
    // Carrega o id do processo de onde veio
    var processoId = ViewData["ProcessoId"];
}

<h1>Examinandos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar novo examinando</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apelido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telemovel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pais)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Morada)
            </th>

            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apelido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telemovel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pais)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Morada)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.IdExa" class="btn btn-outline-primary">Alterar informações</a> |
                    <a asp-action="Details" asp-route-id="@item.IdExa" class="btn btn-outline-primary">Detalhes</a>
                    @if(processoId != null)
                    {
                        <a asp-action="AssociarProc" asp-route-id="@item.IdExa" asp-route-processoId="@processoId" class="btn btn-success">Associar</a>
                    }
            </td>

            </tr>
}
    </tbody>
</table>