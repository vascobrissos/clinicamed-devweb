@model IEnumerable<ClinicaMed.ViewModels.ColaboradorViewModel>

@{
    ViewData["Title"] = "Lista de Colaboradores";
}

@functions {
    public static string GetEstadoCivil(int estadoCivil)
    {
        switch (estadoCivil)
        {
            case 0:
                return "Solteiro(a)";
            case 1:
                return "Casado(a)";
            case 2:
                return "Divorciado(a)";
            case 3:
                return "Viúvo(a)";
            default:
                return "Desconhecido";
        }
    }
}

<h1 class="my-4 text-center">Lista de Colaboradores</h1>

<div class="row mb-3">
    <div class="col-md-6">
        <form method="get" asp-action="Index">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Pesquisar por Username" name="searchString" value="@ViewData["CurrentFilter"]" />
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-search"></i> Pesquisar
                </button>
            </div>
        </form>
    </div>
    <div class="col-md-6 text-end">
        @if (User.IsInRole("Administrador"))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Novo Colaborador
            </a>
        }
    </div>

</div>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Username</th>
            <th>Nome de Apresentação</th>
            <th>Estado da Conta</th>
            <th>Email</th>
            <th>Role</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Username</td>
                <td>@item.Colaborador.NomeApresentacao</td>
                <td>
                    <span class="badge @(item.AccountStatus == "Ativa" ? "bg-success" : "bg-danger")">
                        @item.AccountStatus
                    </span>
                </td>
                <td>@item.Email</td>
                <td>@item.Role</td>
                <td>
                    <button class="btn btn-info btn-sm" onclick="toggleDetails(@item.Colaborador.IdCol)">
                        <i class="fas fa-info-circle"></i> Detalhes
                    </button>
                    @if (User.IsInRole("Administrador"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Colaborador.IdCol" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a asp-action="Toggle" asp-route-id="@item.Colaborador.IdCol" class="btn btn-secondary btn-sm">
                            <i class="fas fa-toggle-on"></i> @(item.AccountStatus == "Ativa" ? "Desativar" : "Ativar")
                        </a>
                    }
                </td>
            </tr>
            <tr id="details-@item.Colaborador.IdCol" class="collapse">
                <td colspan="6">
                    <div class="card card-body">
                        <p><strong>Sexo:</strong> @(item.Colaborador.Sexo == 0 ? "Masculino" : "Feminino")</p>
                        <p><strong>Pais:</strong> @item.Colaborador.Pais</p>
                        <p><strong>Morada:</strong> @item.Colaborador.Morada</p>
                        <p><strong>Código Postal:</strong> @item.Colaborador.CodPostal</p>
                        <p><strong>Localidade:</strong> @item.Colaborador.Localidade</p>
                        <p><strong>Nacionalidade:</strong> @item.Colaborador.Nacionalidade</p>
                        <p><strong>Estado Civil:</strong> @GetEstadoCivil(@item.Colaborador.EstadoCivil)</p>
                        <p><strong>Número de Ordem:</strong> @item.Colaborador.NumOrdem</p>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function toggleDetails(id) {
        var detailsRow = document.getElementById("details-" + id);
        detailsRow.classList.toggle("collapse");
    }
</script>
