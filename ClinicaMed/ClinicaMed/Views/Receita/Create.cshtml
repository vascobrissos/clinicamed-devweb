@model ClinicaMed.Models.Receita

@{
    ViewData["Title"] = "Criar Receita";
}

<h1>@ViewData["Title"]</h1>

<h4>Receita</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumReceita" class="control-label"></label>
                <input asp-for="NumReceita" class="form-control" />
                <span asp-validation-for="NumReceita" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notas" class="control-label"></label>
                <input asp-for="Notas" class="form-control" />
                <span asp-validation-for="Notas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataReceita" class="control-label"></label>
                <input asp-for="DataReceita" class="form-control" type="date" />
                <span asp-validation-for="DataReceita" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ColaboradorFK" class="control-label"></label>
                <select asp-for="ColaboradorFK" class="form-control" asp-items="ViewBag.ColaboradorFK"></select>
                <span asp-validation-for="ColaboradorFK" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ProcessoFK" value="@ViewData["ProcessoId"]" />

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Criar</button>
                <a asp-action="Details" asp-controller="Processo" asp-route-id="@ViewData["ProcessoId"]" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
