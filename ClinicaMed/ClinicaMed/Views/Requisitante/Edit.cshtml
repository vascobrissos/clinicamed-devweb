@model ClinicaMed.Models.Requisitante

@{
    ViewData["Title"] = "Editar Requisitante";
}

<div class="container mt-5">
    @if (User.IsInRole("Administrador") || User.IsInRole("Administrativo"))
    {
        <h1 class="text-center">
            @ViewData["Title"]
        </h1>
    }
    else
    {
        <h1 class="text-center">Dados Requisitante</h1>
    }

    <h4 class="text-center">Requisitante</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdReq" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" placeholder="Nome" disabled="@(User.IsInRole("Administrador") || User.IsInRole("Administrativo") ? false : true)" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Apelido" class="control-label"></label>
                            <input asp-for="Apelido" class="form-control" placeholder="Apelido" disabled="@(User.IsInRole("Administrador") || User.IsInRole("Administrativo") ? false : true)" />
                            <span asp-validation-for="Apelido" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Telemovel" class="control-label"></label>
                            <input asp-for="Telemovel" class="form-control" placeholder="Telemóvel" disabled="@(User.IsInRole("Administrador") || User.IsInRole("Administrativo") ? false : true)" />
                            <span asp-validation-for="Telemovel" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="Email" disabled="@(User.IsInRole("Administrador") || User.IsInRole("Administrativo") ? false : true)" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Sexo" class="control-label"></label>
                            <select asp-for="Sexo" class="form-select" disabled="@(User.IsInRole("Administrador") || User.IsInRole("Administrativo") ? false : true)">
                                <option value="0">Masculino</option>
                                <option value="1">Feminino</option>
                            </select>
                            <span asp-validation-for="Sexo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Pais" class="control-label">País</label>
                            <input asp-for="Pais" class="form-control" disabled="@(User.IsInRole("Administrador") || User.IsInRole("Administrativo") ? false : true)" />
                            <span asp-validation-for="Pais" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Morada" class="control-label"></label>
                            <input asp-for="Morada" class="form-control" disabled="@(User.IsInRole("Administrador") || User.IsInRole("Administrativo") ? false : true)" />
                            <span asp-validation-for="Morada" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CodigoPostal" class="control-label">Código Postal</label>
                            <input asp-for="CodigoPostal" class="form-control" disabled="@(User.IsInRole("Administrador") || User.IsInRole("Administrativo") ? false : true)" />
                            <span asp-validation-for="CodigoPostal" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Localidade" class="control-label"></label>
                            <input asp-for="Localidade" class="form-control" disabled="@(User.IsInRole("Administrador") || User.IsInRole("Administrativo") ? false : true)" />
                            <span asp-validation-for="Localidade" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Nacionalidade" class="control-label"></label>
                            <input asp-for="Nacionalidade" class="form-control" disabled="@(User.IsInRole("Administrador") || User.IsInRole("Administrativo") ? false : true)" />
                            <span asp-validation-for="Nacionalidade" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Nif" class="control-label">NIF</label>
                            <input asp-for="Nif" class="form-control" disabled="@(User.IsInRole("Administrador") || User.IsInRole("Administrativo") ? false : true)" />
                            <span asp-validation-for="Nif" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <input type="hidden" name="processoId" value="@Model.ProcessoId" />

                <div class="form-group text-center mt-4">
                    @if (User.IsInRole("Administrador") || User.IsInRole("Administrativo"))
                    {
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    }
                    <a asp-action="Details" asp-controller="Processo" asp-route-id="@Model.ProcessoId" class="btn btn-secondary">Voltar ao Processo</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
